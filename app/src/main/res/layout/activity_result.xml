<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/carbon_black_87"
    tools:context=".activities.ResultActivity">


    <carbon.widget.TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:carbon_cornerRadius="20dp"
        android:layout_centerInParent="true"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:clickable="true"
        app:carbon_elevation="2dp"
        android:gravity="center_vertical"
        android:hint="Hello"
        app:carbon_elevationShadowColor="@color/carbon_red_900"
        android:textColorHint="@color/carbon_blue_300"
        android:id="@+id/shortUrlText"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/carbon_blue_400"
        android:fontFamily="sans-serif"/>

</carbon.widget.RelativeLayout>